<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="honf.harshil.com.honf.search_enter">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Location"
    android:textSize="40sp"
    android:textColor="#82b1ff"
    android:id="@+id/text1"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="37dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">
<EditText
    android:layout_weight="1.00"
    android:textSize="30sp"

    android:layout_below="@id/text1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/location_ic"
            android:layout_weight="0.20"
            android:layout_width="wrap_content"
            android:layout_height="67dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cuisine"
        android:id="@+id/textView"
        android:textSize="40sp"
        android:textColor="#42a5f5"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:layout_alignEnd="@+id/text1" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:voiceIcon="@color/accent_material_light"
        android:touchscreenBlocksFocus="true"
        android:searchIcon="@drawable/abc_ic_search_api_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drool It!"
        android:onClick="content"
        android:id="@+id/button"
        android:layout_below="@+id/searchView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:textColor="#fff"
        android:textSize="30sp"
        android:background="@drawable/my_button2"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
