<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    tools:context="honf.harshil.com.honf.search_enter">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cuisine"
        android:id="@+id/textView"
        android:textSize="40sp"
        android:textColor="#42a5f5"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:layout_alignEnd="@+id/text1" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:id="@+id/searchView"
        android:layout_below="@id/textView"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drool It!"
        android:onClick="content"
        android:id="@+id/button"
        android:layout_below="@+id/searchView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:textColor="#fff"
        android:textSize="30sp"
        android:background="@drawable/my_button2"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/text1"
        android:layout_alignParentStart="true">
<android.support.design.widget.TextInputLayout
    android:layout_width="0dp"
    android:layout_weight="1.00"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">
<EditText
    android:hint="Location"
    android:layout_weight="1"
    android:textSize="30sp"
android:id="@+id/location"
    android:textColorHint="#42a5f5"
    android:layout_below="@id/text1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
</android.support.design.widget.TextInputLayout>
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/loc"
            android:layout_marginTop="20dp"
            android:src="@drawable/location"
            android:layout_weight="0.20"
            android:background="@drawable/enterok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>


</RelativeLayout>
