<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >

            <gradient android:angle="-90" android:startColor="#505050" android:endColor="#505050"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <solid android:color="#6d6f6f"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">

            <gradient android:angle="-90" android:startColor="#757575" android:endColor="#757575"/>
        </shape>
    </item>
</selector>